<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTTCResale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:text="TTC Revenda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTTVResale" />

        <EditText
            android:id="@+id/editTTCResale"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/price_shape"
            android:ems="10"
            android:hint="@string/exemplo"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:paddingTop="9dp"
            android:paddingRight="2dp"
            android:paddingBottom="10dp"
            android:singleLine="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTTCResale" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="R$"
            android:background="@drawable/r_shape"
            app:layout_constraintEnd_toStartOf="@+id/editTTCResale"
            app:layout_constraintTop_toBottomOf="@+id/textTTCResale" />

        <EditText
            android:id="@+id/editTTCCompetitor"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/price_shape"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"
            android:paddingRight="2dp"
            android:singleLine="false"
            android:hint="@string/exemplo"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textTTCCompetitor" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="R$"
            android:background="@drawable/r_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTTCCompetitor" />

        <TextView
            android:id="@+id/textTTCCompetitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="TTC Concorrente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTTVCompetitor" />

        <EditText
            android:id="@+id/editTTVResale"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:background="@drawable/price_shape"
            android:singleLine="false"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"
            android:paddingRight="2dp"
            android:hint="@string/exemplo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTTVResale" />

        <TextView
            android:id="@+id/textTTVResale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:text="TTV Revenda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="R$"
            android:background="@drawable/r_shape"
            app:layout_constraintEnd_toStartOf="@+id/editTTVResale"
            app:layout_constraintTop_toBottomOf="@+id/textTTVResale" />

        <TextView
            android:id="@+id/textTTVCompetitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="TTV Concorrente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="R$"
            android:background="@drawable/r_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTTVCompetitor" />

        <EditText
            android:id="@+id/editTTVCompetitor"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:background="@drawable/price_shape"
            android:singleLine="false"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"
            android:paddingRight="2dp"
            android:hint="@string/exemplo"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textTTVCompetitor" />


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="161dp"
            android:layout_height="123dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_sales"
            tools:ignore="VectorDrawableCompat" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>